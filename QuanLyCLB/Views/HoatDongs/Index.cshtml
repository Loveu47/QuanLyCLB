@model IEnumerable<QuanLyCLB.Models.HoatDong>
@{
    ViewBag.Title = "Toàn bộ hoạt động";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container mt-xl-50 mt-sm-30 mt-15">
    <!-- Title -->
    <div class="hk-pg-header">
        <div>
            <h2 class="hk-pg-title font-weight-600">Theo dõi toàn bộ hoạt động của các tổ chức được quản lý</h2>
        </div>
    </div>
    <!-- /Title -->
    <!-- Row -->
    @foreach (var item in Model)
    {
        <div class="card card-profile-feed">
            <div class="card-header card-header-action">
                <div class="media align-items-center">
                    <div class="media-img-wrap d-flex mr-10">
                        <div class="avatar avatar-sm">
                            @if (item.ToChuc.Logo != null)
                            {
                                <img src="@item.ToChuc.Logo" alt="user" class="avatar-img rounded-circle">
                            }
                            else
                            {
                                <img src="~/Content/upload/logoVinh.jpg" alt="user" class="avatar-img rounded-circle">
                            }
                        </div>
                    </div>
                    <div class="media-body">
                        <div class="text-capitalize font-weight-500 text-dark">@item.ToChuc.Ten</div>
                        <div class="font-13">@item.ThoiGian</div>
                    </div>
                </div>
                <div class="d-flex align-items-center card-action-wrap">
                    <div class="inline-block dropdown">
                        <a class="dropdown-toggle no-caret" data-toggle="dropdown" href="#" aria-expanded="false" role="button"><i class="ion ion-ios-more"></i></a>
                        <div class="dropdown-menu dropdown-menu-right" style="will-change: transform;">
                            <a class="dropdown-item" href="@Url.Action("ChiTiet","HoatDongs", new {id = item.Id})">Chi tiết</a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item" href="#">...</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div class="card">
                    <div class="position-relative">
                        <img class="card-img-top d-block" src="@item.AnhChinh" alt="Card image cap">
                        <a href="@Url.Action("ChiTiet","HoatDongs", new {id = item.Id})" class="btn btn-dark btn-wth-icon icon-wthot-bg btn-rounded btn-pg-link"><span class="icon-label"><i class="ion ion-md-link"></i></span><span class="btn-text">Chi tiết</span></a>
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.TieuDe</h5>
                    </div>
                </div>
            </div>
        </div>
    }
    <!-- /Row -->

</div>
